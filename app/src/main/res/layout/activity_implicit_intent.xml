
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_implicit_intent"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.iuliia.implicitly.ImplicitIntentActivity">

<Button
    android:text="Show Web Page"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:id="@+id/button2"
    app:layout_constraintLeft_toLeftOf="@+id/activity_implicit_intent"
    app:layout_constraintTop_toTopOf="@+id/activity_implicit_intent"
    app:layout_constraintRight_toRightOf="@+id/activity_implicit_intent"
    app:layout_constraintBottom_toBottomOf="@+id/activity_implicit_intent"
    android:onClick="showWebPage" />
</android.support.constraint.ConstraintLayout>
